public class Main {
    public static void main(String[] args) {
       
        System.out.println(fibonacci(6));  // Llamamos a la función fibonacci 
    }
    static int fibonacci(int n) {       // Función recursiva 
        
        if (n == 0) return 0;  // Caso base: si n es 0
        
        if (n == 1) return 1;  // Caso base: si n es 
      
        return fibonacci(n - 1) + fibonacci(n - 2);   // la suma de los dos términos anteriores
    }
}
