public class Main {
    public static void main(String[] args) {
        System.out.println(contarCaracter("programacion", 'o')); // se llama a la funci칩n contarCaracter 
    }
    static int contarCaracter(String palabra, char c) {    // Funci칩n recursiva 
       
    if (palabra.isEmpty()) return 0;   // Caso base
        
     int suma = (palabra.charAt(0) == c) ? 1 : 0;  // Verificamos si el primer car치cter es igual al buscado
        
        return suma + contarCaracter(palabra.substring(1), c);
          // se llama para eliminar el primer car치cter de la cadena
    }
}
